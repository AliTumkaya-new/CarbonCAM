# ==============================
# CarbonCAM - Environment Variables Template
# ==============================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control


# ------------------------------
# Clerk Authentication
# ------------------------------
# Get these from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_XXXXXXXXXXXXXXXXXXXXXXXXXXXX
CLERK_SECRET_KEY=sk_test_XXXXXXXXXXXXXXXXXXXXXXXXXXXX
CLERK_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Clerk routing
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up


# ------------------------------
# Supabase Database
# ------------------------------
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.XXXXXXXX
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.XXXXXXXX


# ------------------------------
# Backend API Configuration
# ------------------------------
# Development: http://localhost:8000
# Production: Your deployed backend URL (e.g., https://api.carboncam.com)
CARBONCAM_API_URL=http://localhost:8000

# FastAPI runtime port
PORT=8000

# CORS Configuration
# Development
CORS_ALLOW_ORIGINS=http://localhost:3000

# Production (comma-separated)
# CORS_ALLOW_ORIGINS=https://your-app.vercel.app,https://carboncam.com


# ------------------------------
# Email Service (Resend)
# ------------------------------
# Get from: https://resend.com/api-keys
# Optional - required for email notifications
RESEND_API_KEY=re_XXXXXXXXXXXXXXXXXXXXXXXXXXXX


# ------------------------------
# Error Tracking (Sentry)
# ------------------------------
# Get from: https://sentry.io/settings/projects/
# Optional - for production error monitoring
SENTRY_DSN=https://XXXXXXXXXXXXXXXXXXXXXXXXXXXX@sentry.io/XXXXXXX
SENTRY_ORG=your-org-name
SENTRY_PROJECT=your-project-name
SENTRY_AUTH_TOKEN=sntrys_XXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Environment
NODE_ENV=development
# NODE_ENV=production


# ------------------------------
# Redis (Optional)
# ------------------------------
# For advanced rate limiting
# Development: Leave empty to use in-memory storage
# Production: Use Redis Cloud or similar
# REDIS_URL=redis://localhost:6379
# REDIS_URL=redis://default:password@redis-host:6379


# ------------------------------
# Crisp Chat (Optional)
# ------------------------------
# Get from: https://app.crisp.chat/settings/websites/
NEXT_PUBLIC_CRISP_WEBSITE_ID=XXXXXXXX-XXXX-XXXX-XXXX-XXXXXXXXXXXX
